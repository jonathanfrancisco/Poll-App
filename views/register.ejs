<%- include('./partials/header', {pageName: 'Register'})%>

    <div class='container mt-4'>
      
        <div class='row'>
            <div class='col-lg-8 mx-auto'>
                <% if(successMessages.length > 0)  { %>
                    <% successMessages.forEach((msg) => { %>
                    <div class="alert alert-success" role="alert">
                       <%=msg%>
                    </div>
                    <% }) %>
                <% } else if(errorMessages.length > 0) { %>
                    <% errorMessages.forEach((msg) => { %>
                    <div class="alert alert-danger" role="alert">
                            <%=msg%>
                    </div>
                    <% }) %>
                <% } %>
                <form method='POST' action='/register'>
                    <div class="form-group">
                        <label for="nameInput">Name</label>
                        <input required name='name' type="text" class="form-control" id="nameInput" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="usernameInput">Username</label>
                        <input required name='username' type="text" class="form-control" id="usernameInput" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label for="passwordInput">Password</label>
                        <input required name='password' type="password" class="form-control" id="passwordInput" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            
        </div>
    </div>


<%- include('./partials/footer') %>