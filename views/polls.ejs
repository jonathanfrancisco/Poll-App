<%- include('./partials/header',{pageName: 'All Polls'}) %>

    <div class='container mt-4'>
    
        <h2>Available Polls</h2>
        <div class='row'>
            <% if(polls.length <= 0) {%>
                <p>No polls available!</p>
            <% } else { %>
                <% polls.forEach((poll) => {%>
                        
                <div class='col-xs12 col-sm-6 col-md-4 col-lg-3 mb-3'>
                    <div class="card h-100 w-100">
                        <div class="card-body">
                            <h5 class="card-title"><%=poll.title%></h5>
                            <p class="card-text"><%=poll.description%></p>
                            <footer class="blockquote-footer"><%=poll.created_at%></footer>
                            <a href="#" class="btn btn-primary">View Poll</a>
                        </div>
                    </div>
                </div>
                <% })%>
            <% } %>
        </div>
        <div class='row col-12'>
            <nav class='mx-auto' aria-label="Page navigation example">
                <% if (pages > 0) { %>
                <ul class="pagination">
                    <% if (currentPage == 1) { %>
                    <li class="page-item disabled"><a class="page-link">First</a></li>
                    <% } else { %>
                    <li class="page-item"><a class="page-link" href="/polls/1">First</a></li>
                    <% } %>
                    <% var i = (Number(currentPage) > 2 ? Number(currentPage) - 1 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                    <% for (; i <= (Number(currentPage) + 1) && i <= pages; i++) { %>
                        <% if (i == currentPage) { %>
                            <li class="page-item active"><a class="page-link"><%=i%></a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/polls/<%=i%>"><%=i%></a></li>
                        <% } %>
                        <% if (i == Number(currentPage) + 1 && i < pages) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                    <% } %>
                    <% if (currentPage == pages) { %>
                        <li class="page-item disabled"><a class="page-link">Last</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/polls/<%=pages%>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>
            </nav>
        </div>

    </div>

<%- include('./partials/footer') %>